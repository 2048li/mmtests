#!/bin/bash
P=libmicro-contextswitch-bench
DEFAULT_VERSION=1
. $SHELLPACK_INCLUDE/common.sh
TIME_CMD=`which time`
if [ "$TIME_CMD" = "" ]; then
        TIMEFORMAT="%2Uuser %2Ssystem %Relapsed %P%%CPU"
        TIME_CMD="time"
fi

# Basic argument parser
TASKSET_SERVER=
TASKSET_CLIENT=
SERVERSIDE_COMMAND=none
SERVERSIDE_NAME=`date +%Y%m%d-%H%M-%S`

while [ "$1" != "" ]; do
	case "$1" in
	-v)
		VERSION=$2
		shift 2
		;;
	--serverside-command)
		SERVERSIDE_COMMAND=$2
		shift 2
		;;
	--serverside-name)
		SERVERSIDE_NAME=$2
		shift 2
		;;
	--install-only)
		INSTALL_ONLY=yes
		shift
		;;
	--install-force)
		INSTALL_FORCE=yes
		shift
		;;
	*)
		echo Unrecognised option: $1
		shift
	esac
done
if [ "$TASKSET_SERVER" != "" ]; then
	echo TASKSET_SERVER: $TASKSET_SERVER
	echo TASKSET_CLIENT: $TASKSET_CLIENT
fi
if [ -z "$VERSION" ]; then
	VERSION=$DEFAULT_VERSION
fi

if [ "$INSTALL_FORCE" = "yes" ]; then
	rm -rf $SHELLPACK_SOURCES/libmicro-contextswitch-${VERSION}
fi
if [ ! -d $SHELLPACK_SOURCES/libmicro-contextswitch-${VERSION}-installed ]; then
	mmtests_activity source-install
	$SHELLPACK_INCLUDE/shellpack-install-libmicro-contextswitch -v ${VERSION}  || die libmicro-contextswitch install script returned error
	mmtests_activity source-installed
fi
cd $SHELLPACK_SOURCES/libmicro-contextswitch-${VERSION}-installed || die Failed to cd to libmicro-contextswitch install directory
if [ "$INSTALL_ONLY" = "yes" ]; then
	echo libmicro-contextswitch installed only as requested.
	exit $SHELLPACK_SUCCESS
fi

# Include monitor hooks
. $SHELLPACK_INCLUDE/include-monitor.sh

cd $SHELLPACK_SOURCES/libmicro-contextswitch-${VERSION}-installed || die Failed to cd to libmicro directory

COMMON="-E -C 0 -D 30000 -B 10000 -L -S -W"

TMPROOT=/tmp/libmicro.$$
VARROOT=/var/tmp/libmicro.$$
mkdir -p $TMPROOT
mkdir -p $VARROOT
trap "rm -rf $TMPROOT $VARROOT" 0 2

TFILE=$TMPROOT/data
VFILE=$VARROOT/data
dd if=/dev/zero of=$TFILE bs=1024k count=10 2>/dev/null
dd if=/dev/zero of=$VFILE bs=1024k count=10 2>/dev/null

while read A B C; do
	monitor_pre_hook $LOGDIR_RESULTS $B
	if [ -f bin/$A ]; then
		eval bin/$A $COMMON -N "$B" $C 2>&1 > $LOGDIR_RESULTS/$B.log
	fi
	monitor_post_hook $LOGDIR_RESULTS $B
done <<EOT
getcontext	getcontext
setcontext	setcontext
mutex	mutex_st
mutex	mutex_mt	-t
mutex	mutex_T2	-T 2
cascade_mutex	c_mutex_1
cascade_mutex	c_mutex_10	-T 10
cascade_mutex	c_mutex_200	-T 200
cascade_cond	c_cond_1
cascade_cond	c_cond_10	-T 10
cascade_cond	c_cond_200	-T 200
cascade_lockf	c_lockf_1
cascade_lockf	c_lockf_10 -P 10
cascade_lockf	c_lockf_200 -P 200
cascade_flock	c_flock
cascade_flock	c_flock_10 -P 10
cascade_flock	c_flock_200 -P 200
cascade_fcntl	c_fcntl_1
cascade_fcntl	c_fcntl_10 -P 10
cascade_fcntl	c_fcntl_200 -P 200
file_lock	file_lock
fcntl	fcntl_tmp -f $TFILE
fcntl	fcntl_usr -f $VFILE
fcntl_ndelay	fcntl_ndelay
EOT

exit $SHELLPACK_SUCCESS
#### Description libmicro-contextswitch
#### Details libmicro-contextswitch-bench 5
