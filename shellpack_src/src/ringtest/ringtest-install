 int main(int argc, char **argv)
 {
-	int i, parent, me;
+	int i, j, parent, me;
 
 	if (argc > 2) {
 usage:
@@ -125,7 +125,7 @@ usage:
 	if (me == parent)
 		i = 0;
 
-	while (1) {
+	for (j = 0; j < 10; j++) {
 		worker(i);
 	}
==== END terminate.patch ====
