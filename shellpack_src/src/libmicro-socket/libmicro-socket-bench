#!/bin/bash
###SHELLPACK preamble libmicro-socket-bench 1

###SHELLPACK parseargBegin
###SHELLPACK parseargInstall
###SHELLPACK parseargEnd

###SHELLPACK check_install_required libmicro-socket-${VERSION}

###SHELLPACK monitor_hooks

cd $SHELLPACK_SOURCES/libmicro-socket-${VERSION}-installed || die Failed to cd to libmicro directory

COMMON="-E -C 2000 -L -S -W"

while read A B C; do
	monitor_pre_hook $LOGDIR_RESULTS $B
	if [ -f bin/$A ]; then
		eval bin/$A $COMMON -N "$B" $C 2>&1 > $LOGDIR_RESULTS/$B.log
	fi
	monitor_post_hook $LOGDIR_RESULTS $B
done <<EOT
getsockname	getsockname	-B 10000
getpeername	getpeername	-B 10000
socket	socket_u	-B 10000
socket	socket_i	-B 10000	-f PF_INET
socketpair	socketpair	-B 10000
setsockopt	setsockopt	-B 10000
bind	bind	-B 10000
listen	listen	-B 10000
poll	poll_10	-n 10	-B 10000
poll	poll_100	-n 100	-B 10000
poll	poll_1000	-n 1000	-B 10000
poll	poll_w10	-n 10	-B 10000	-w 1
poll	poll_w100	-n 100	-B 10000	-w 10
poll	poll_w1000	-n 1000	-B 10000	-w 100
select	select_10	-n 10	-B 10000
select	select_100	-n 100	-B 10000
select	select_1000	-n 1000	-B 10000
select	select_w10	-n 10	-B 10000	-w 1
select	select_w100	-n 100	-B 10000	-w 10
select	select_w1000	-n 1000	-B 10000 -w 100
connection	connection	-B 10000
connection	conn_accept	-B 10000 -a
connection	conn_connect	-B 10000 -c
close_tcp	close_tcp	-B 10000
EOT

exit $SHELLPACK_SUCCESS
